{
    "env": {
        "browser": true,
        "es2021": true,
		"jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
		"jest"
    ],
    "rules": {
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "warn",
		"no-unused-vars": "warn",
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [
            0
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ]
    }
}
